<%= simple_form_for @item do |f|%>
  <%= f.input :name, label: "Nom de l'objet" %>
  <%= f.input :category, label: "Catégorie" %>
  <%= f.input :picture, label: "Photo (URL)" %>
  <%= f.input :description, label: "Description" %>
  <%= f.button :submit, "Créer l'objet", class: "btn btn-primary" %>
<% end %>
