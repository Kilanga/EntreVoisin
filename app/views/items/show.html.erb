<div class="row">
   <div class="col-8">
     <img src="<%= @item.picture %>" class="img-details" alt="<%= @item.name %>">
   </div>
   <div class="col-4 card-details">
     <h3><%= @item.category.upcase %></h3>
     <h2><%= @item.name.capitalize %></h2>
     <i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i>
     <p><%= @item.description %></p>
     <%= simple_form_for [@item, @booking] do |f| %>
       <%= f.input :status, as: :hidden, input_html: {value:"pending"} %>
       <%= f.input :start_date, label:"Check in", input_html: { class: 'form-control flatpickr', data: { controller: "flatpickr", flatpickr_date_format: "Y-m-d" } }%>
       <%= f.input :end_date, label:"Check out", input_html: { class: 'form-control flatpickr', data: { controller: "flatpickr", flatpickr_date_format: "Y-m-d" } }%>
       <%= f.submit %>
     <% end %>
   </div>
 </div>