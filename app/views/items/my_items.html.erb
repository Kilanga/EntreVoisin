<div class="container mt-3">
  <h1>Mes objets</h1>
  <div class="cards-items">
    <% @items.each do |item| %>
      <div class="card-item">
        <% if item.photo.key %>
          <%= cl_image_tag item.photo.key %>
        <% else %>
          <img src="<%= item.picture %>" alt="<%= item.name %>">
        <% end %>
        <div class="card-item-infos">
          <h2><%= item.name %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
