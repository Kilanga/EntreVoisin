<h1>Tous les objets disponibles</h1>

<div class="cards-items">
  <% @items.each do |item| %>
    <div class="card-item">
      <%= image_tag(item.picture) %>
      <div class="card-item-infos">
        <h2><%= item.name %></h2>
        <p><%= item.description %></p>
        <%= link_to "Voir", item_path(item), class: "btn btn-green" %>
      </div>
    </div>
  <% end %>
</div>
